<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:shimmer_animation_duration="1500"
        app:shimmer_color="@color/shimmer_background_color1"
        app:shimmer_mask_width="1"
        app:shimmer_angle="30"
        app:shimmer_auto_start="true">

        <View
            android:layout_width="1000dp"
            android:layout_height="260dp"
            android:background="@color/shimmer_background_color"
        />



    </io.supercharge.shimmerlayout.ShimmerLayout>


        <RelativeLayout
            android:id="@+id/TopLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:visibility="visible">


            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:translationZ="10dp"
                android:id="@+id/currentLocationIcon"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/gps" />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/currentCityName"
                android:textSize="15dp"
                android:translationZ="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:text=""
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="40dp"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/homebg"
                android:layout_width="1000dp"
                android:layout_height="260dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="0dp"
                android:backgroundTint="@color/colorSecondary"
                android:scaleType="fitXY"
                android:visibility="invisible"
                app:srcCompat="@drawable/nat4" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="121dp"
                android:layout_marginTop="140dp"
                android:layout_marginEnd="118dp"
                android:alpha="0.9"
                android:background="@drawable/round_corner_display"
                android:gravity="center"
                android:orientation="horizontal"
                android:translationZ="10dp">

                <TextView
                    android:id="@+id/searchIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.9"
                    android:fontFamily="sans-serif-black"
                    android:text="Where to ?"
                    android:layout_marginLeft="5dp"
                    android:textSize="14dp" />

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:src="@drawable/navigation" />
            </LinearLayout>

            <RatingBar
                android:id="@+id/ratingBar"
                android:layout_width="282dp"
                android:layout_height="47dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="63dp"
                android:layout_marginTop="187dp"
                android:layout_marginEnd="65dp"
                android:clickable="false"
                android:isIndicator="true"
                android:numStars="5"
                android:progressBackgroundTint="#fff"
                android:progressTint="#FFDF00"
                android:rating="0"
                android:scaleX=".5"
                android:scaleY=".5"
                android:secondaryProgressTint="#fff"
                android:translationZ="20dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/countText"
                android:layout_width="1000dp"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/homebg"
                android:layout_alignBottom="@+id/homebg"
                android:layout_marginTop="228dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-light"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="invisible" />

        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbarStyle="insideOverlay"
        android:layout_alignParentTop="true"
        android:layout_marginTop="260dp"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:text="Places To Visit"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:textFontWeight="7000"
            android:textSize="20dp"
            android:textColor="#000"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/shimmerHolderForScroll1"
                android:scrollbars="none"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true">

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <io.supercharge.shimmerlayout.ShimmerLayout
                        android:id="@+id/shimmer_scroll_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        app:shimmer_animation_duration="1500"
                        app:shimmer_color="@color/shimmer_background_color1"
                        app:shimmer_mask_width="1"
                        app:shimmer_angle="30"
                        app:shimmer_auto_start="true">

                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            app:cardBackgroundColor="@color/shimmer_background_color"
                            app:cardCornerRadius="20dp" />

                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="210dp"
                            app:cardBackgroundColor="@color/shimmer_background_color"
                            app:cardCornerRadius="20dp" />

                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="420dp"
                            app:cardBackgroundColor="@color/shimmer_background_color"
                            app:cardCornerRadius="20dp" />

                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="630dp"
                            app:cardBackgroundColor="@color/shimmer_background_color"
                            app:cardCornerRadius="20dp" />

                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="840dp"
                            app:cardBackgroundColor="@color/shimmer_background_color"
                            app:cardCornerRadius="20dp" />

                        <android.support.v7.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="200dp"
                            android:layout_marginLeft="1050dp"
                            app:cardBackgroundColor="@color/shimmer_background_color"
                            app:cardCornerRadius="20dp" />



                    </io.supercharge.shimmerlayout.ShimmerLayout>
                </LinearLayout>
            </HorizontalScrollView>

        <HorizontalScrollView
            android:id="@+id/scroll1"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/linearLayout1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tag="0"
                    android:orientation="vertical"
                >
                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        app:cardBackgroundColor="#1da"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:layout_width="fill_parent"
                            android:id="@+id/scrollImage1"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/nat4" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:layout_width="200dp"
                        android:id="@+id/scrollText1"
                        android:text=""
                        android:padding="4dp"
                        android:textSize="14dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="1">

                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="#1da"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:id="@+id/scrollImage2"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/nat4" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/scrollText2"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=""
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="2">

                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="#1da"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:id="@+id/scrollImage3"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/nat4" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/scrollText3"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=""
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="3">

                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="#1da"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:id="@+id/scrollImage4"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/nat4" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/scrollText4"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=""
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="4">

                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="#1da"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:id="@+id/scrollImage5"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/nat4" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/scrollText5"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=""
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:tag="5">

                    <android.support.v7.widget.CardView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_marginLeft="10dp"
                        app:cardBackgroundColor="#1da"
                        app:cardCornerRadius="20dp">


                        <ImageView
                            android:id="@+id/scrollImage6"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:scaleType="fitXY"
                            android:src="@drawable/nat4" />

                    </android.support.v7.widget.CardView>

                    <TextView
                        android:id="@+id/scrollText6"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:text=""
                        android:textSize="14dp" />
                </LinearLayout>

            </LinearLayout>

        </HorizontalScrollView>
        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>
</ScrollView>
